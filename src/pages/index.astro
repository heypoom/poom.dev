---
import BaseHead from '../components/BaseHead.astro'

import { SITE_TITLE, SITE_DESCRIPTION } from '../config'

import { Content as About } from '../data/about.mdx'
import { Content as Contact } from '../data/contact.mdx'
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <main>
      <div class="max-w-4xl mx-auto py-8">
        <section
          class="flex flex-col text-xl md:text-2xl leading-8 md:leading-9 text-zinc-800 mx-6"
        >
          <About />
        </section>
      </div>

      <div
        class="contact px-6 py-8 text-gray-200 bg-zinc-900 flex flex-col text-md sm:text-xl leading-8 md:leading-9"
      >
        <section class="max-w-4xl mx-auto">
          <Contact />
        </section>
      </div>
    </main>

    <style is:global>
      h1,
      p,
      ul {
        @apply my-3 sm:mx-8 md:mx-24;
      }

      h1 {
        @apply text-3xl font-bold;
      }

      ul {
        @apply list-disc;
      }

      b {
        @apply font-bold;
      }

      a {
        @apply text-purple-500;
      }

      .contact a {
        @apply text-purple-300;
      }

      .highlighted {
        @apply text-white px-2 py-1 shadow-sm;

        background-image: linear-gradient(
          80deg,
          #f27121cc,
          #e94057cc,
          #8a2387cc
        );

        border-radius: 6px;
      }
    </style>
  </body>
</html>
