---
import { unified } from 'unified'
import remarkParse from 'remark-parse'
import remarkGfm from 'remark-gfm'
import remarkRehype from 'remark-rehype'
import rehypeStringify from 'rehype-stringify'
import matter from 'gray-matter'
import { visit } from 'unist-util-visit'
import { remarkWikiLink } from '@portaljs/remark-wiki-link'
import cx from 'classnames'
import { Icon } from 'astro-icon/components'

import '../styles/note.css'

import BaseHead from '../components/BaseHead.astro'

import { type Note } from '../prepare/types'
import { slugify } from '../prepare/slug'

import { rehypeFigure } from '../lib/rehype-figure'

export const prerender = false
let renderTime = 0

const findStart = performance.now()

// const note = await notes$.findOne({
//   slug: { $eq: Astro.params.note! },
// })

const note: Note = {
  source: 'foo bar',
  path: 'foo',
  name: 'Foo',
  slug: 'foo-bar',
  size: 6,
  timestamp: new Date(),
  tags: [],
  links: [],
  images: [],
  metadata: {},
}

console.log(`[~] notes.findOne took ${performance.now() - findStart}ms`)

const slugStart = performance.now()

// const publicNotes = await notes$
//   .find(
//     {
//       slug: { $exists: true },
//       $or: [
//         { 'metadata.public': true },
//         { 'metadata.published': { $exists: true } },
//       ],
//     },
//     {
//       projection: { slug: 1, name: 1 },
//     },
//   )
//   .toArray()

const publicNotes: Note[] = []

console.log('[~] slug took', performance.now() - slugStart, 'ms')

const parseStart = performance.now()

const slugs = publicNotes.map((note) => note.slug)

const imageRegex = /.*\.(jpg|jpeg|png|webp|heic)$/

let html = ''

const IMAGE_URL_PREFIX = 'https://images.poom.dev'

if (note) {
  const { content } = matter(note.source)

  const file = await unified()
    .use(remarkParse)
    .use(remarkGfm)
    .use(remarkWikiLink, {
      aliasDivider: '|',
      permalinks: slugs ?? [],
      pathFormat: 'obsidian-short',
      wikiLinkResolver: (name) => {
        if (imageRegex.test(name)) {
          return [name]
        }

        const targetNote = publicNotes.find((n) => n.name === name)
        if (targetNote) return [targetNote.slug]

        return [slugify(name)]
      },
      newClassName: 'new',
      wikiLinkClassName: 'internal',
      hrefTemplate: (name) => {
        if (imageRegex.test(name)) {
          return `${IMAGE_URL_PREFIX}/${name}`
        }

        return `/${name}`
      },
    })
    .use(() => (root) => {
      visit(root, 'image', (n) => {
        const node = n as any

        const relativeUrl = node.url.replace(/^\//, '')
        const absolutePath = `${IMAGE_URL_PREFIX}/`

        node.url = new URL(relativeUrl, absolutePath).href
      })
    })
    .use(remarkRehype, { allowDangerousHtml: true })
    .use(rehypeFigure)
    .use(() => (root) => {
      let id = 0

      visit(root, 'element', (node) => {
        const el = node as any

        if (el.tagName === 'img') {
          el.properties = {
            ...el.properties,
            className: cx(el.properties.className, 'garden-image'),

            // do not lazy load the first image!
            ...(id > 0 && { loading: 'lazy' }),
          }

          id++
        }
      })
    })
    .use(rehypeStringify, { allowDangerousHtml: true })
    .process(content)

  html = file.toString()
}

console.log('[~] parse took', performance.now() - parseStart, 'ms')

renderTime = performance.now() - findStart
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${note?.name ?? 'Memo'}`} description="" image={null} />
  </head>

  <body>
